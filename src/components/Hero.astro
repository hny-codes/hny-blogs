---
import { Image } from 'astro:assets';
---

<main class='hero mt-5'>
  <div class='relative'>
    <div class='text-center pt-32'>
      <div class='avatar relative'>
        <div class='chat chat-end'>
          <span
            class='absolute text-xl drop-shadow-2xl font-bold rotate-[-10deg] -left-24 sm:-left-28 top-0 opacity-0 animate-heroWeb chat-bubble-primary chat-bubble'
            >Web</span
          >
        </div>
        <div class='chat chat-start'>
          <span
            class='absolute text-xl drop-shadow-2xl font-bold rotate-[30deg] -right-24 sm:-right-28 -top-8 sm:-top-8 opacity-0 animate-heroProgram chat-bubble-primary chat-bubble'
            >Code</span
          >
        </div>
        <div class='chat chat-start'>
          <span
            class='absolute text-xl sm:text-3xl drop-shadow-2xl font-bold rotate-[10deg] -right-28 sm:-right-32 top-14 sm:top-16 opacity-0 animate-heroLife chat-bubble-primary chat-bubble'
            >Life?</span
          >
        </div>
        <div class='w-28 sm:w-32 rounded-full opacity-0 animate-heroAvatar'>
          <Image
            src={'/profile.jpg'}
            format='webp'
            width={300}
            height={300}
            alt='profile picture'
          />
        </div>
      </div>
      <h1
        data-test='hero-text'
        class='drop-shadow-lg text-2xl sm:text-4xl px-4 py-2 max-w-2xl'
      >
        <span class='font-bold relative transition'
          >Welcome! <div
            class='w-0 p-1 opacity-0 bg-primary absolute left-0 top-6 sm:top-9 animate-hoverBarAnim hover-bar'
          >
          </div>
        </span>
        You stumbled upon my humble atelier!
      </h1>
      <h2 class='line-through italic drop-shadow-lg px-4 py-2'>
        where I ramble about myself and my experiences
      </h2>
    </div>
  </div>
</main>
