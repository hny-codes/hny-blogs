---
import { Image } from '@astrojs/image/components';
---

<main class='hero mt-5'>
  <div class='relative'>
    <div class='chat chat-end'>
      <span
        class='absolute text-3xl drop-shadow-2xl font-bold rotate-[-10deg] left-8 sm:left-40 top-32 opacity-0 animate-heroWeb chat-bubble-primary chat-bubble'
        >Web</span
      >
    </div>
    <div class='chat chat-start'>
      <span
        class='absolute text-3xl drop-shadow-2xl font-bold rotate-[30deg] right-8 sm:right-44 top-16 sm:top-20 opacity-0 animate-heroProgram chat-bubble-primary chat-bubble'
        >Code</span
      >
    </div>
    <div class='chat chat-start'>
      <span
        class='absolute text-3xl drop-shadow-2xl font-bold rotate-[10deg] right-3 sm:right-36 top-36 sm:top-44 opacity-0 animate-heroLife chat-bubble-primary chat-bubble'
        >..Life?</span
      >
    </div>
    <div class='text-center pt-32'>
      <div class='avatar'>
        <div class='w-20 sm:w-24 rounded-full opacity-0 animate-heroAvatar'>
          <Image
            src={'/profile.jpg'}
            aspectRatio={'1:1'}
            format='webp'
            width={300}
            height={300}
            alt='profile picture'
          />
        </div>
      </div>
      <h1 class='drop-shadow-lg text-2xl sm:text-4xl px-4 py-2 max-w-2xl'>
        <span class='font-bold relative transition'
          >Welcome! <div
            class='w-0 p-1 opacity-0 bg-primary absolute left-0 top-6 sm:top-9 animate-hoverBarAnim'
          >
          </div>
        </span>
        You stumbled upon my humble atelier!
      </h1>
      <h2 class='line-through italic drop-shadow-lg px-4 py-2'>
        where I ramble about myself and my experiences
      </h2>
    </div>
  </div>
</main>
